{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "function",
        "return",
        "mixin",
        "if",
        "warn",
        "else",
        "for",
        "include",
        "each",
        "extend",
        "debug",
        "content"
      ]
    }],
    "indentation": 4
  }
}